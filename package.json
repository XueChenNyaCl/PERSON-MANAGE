{
  "name": "school-management-system",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "concurrently \"npm run dev:db\" \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:db": "start \"PostgreSQL\" /d \"support\\bin\" postgres.exe -D \"support\\data\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && cargo run --bin school-management-backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && cargo build --release",
    "build": "concurrently \"npm run build:frontend\" \"npm run build:backend\""
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}
