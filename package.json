{
  "name": "school-management-system",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && cargo run --bin school-management-backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && cargo build --release",
    "build": "concurrently \"npm run build:frontend\" \"npm run build:backend\"",
    "lint": "cd frontend && npm run lint",
    "test": "cd frontend && npm run test",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && cargo build",
    "postinstall": "npm run install:frontend && npm run install:backend"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}
